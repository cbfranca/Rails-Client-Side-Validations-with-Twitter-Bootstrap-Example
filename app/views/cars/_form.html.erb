<%= simple_form_for @car, :validate => true , :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :model %>
  <%= f.input :make %>
  <%= f.input :year %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                cars_path, :class => 'btn' %>
  </div>
<% end %>
